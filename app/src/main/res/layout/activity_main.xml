<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingBottom="28dp">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:title="@string/playlist_maker"
        app:titleTextAppearance="@style/toolbar_playlist_maker"
        app:titleTextColor="@color/white" />
    <Button
        style="@style/buttons_in_main"
        android:id="@+id/search"
        android:text="@string/search"
        app:icon="@drawable/loop"
         />
    <Button
        style="@style/buttons_in_main"
        android:id="@+id/media_library"
        android:text="@string/media_library"
        app:icon="@drawable/media_library"
        />
    <Button
        style="@style/buttons_in_main"
        android:id="@+id/settings"
        android:text="@string/settings"
        app:icon="@drawable/settings"
        />
</LinearLayout>